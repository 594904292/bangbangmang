<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
  	android:background="#f5f5f5"
    android:padding="1dp" >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="#FFFFFF"
    android:padding="1dp" >
    <ImageView
        android:id="@+id/usercatagory"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"        
        android:scaleType="fitXY"
        android:src="@mipmap/dynamic_info_left" />


    <TextView
        android:id="@+id/order"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/usercatagory"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dynamic_info_icon"
        android:text="1"
        android:gravity="center_vertical|center_horizontal" />




    <ImageView
        android:id="@+id/userhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/order"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dynamic_info_icon" />

   <TextView
       android:id="@+id/nickname"
       style="@style/TextViewItem_gray"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5px"
       android:layout_marginTop="30dp"
       android:layout_toRightOf="@+id/userhead"
       android:text="用户137"
       android:textColor="#afb7c3"
       android:textSize="14sp" />

    <TextView
        android:id="@+id/nums"
        style="@style/TextViewItem_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5px"
        android:layout_marginTop="30dp"

        android:text="8"
        android:textColor="#afb7c3"
        android:textSize="14sp"
        android:layout_marginRight="30dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingbar"
        android:layout_alignParentEnd="true" />

</RelativeLayout>     

</RelativeLayout>