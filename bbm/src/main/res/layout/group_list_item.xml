<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"

    android:background="#FFFFFF"
    android:padding="1dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/infotag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/dynamic_info_left" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:baselineAligned="true">

                <ImageView
                    android:id="@+id/row_user_image"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@mipmap/rihanna"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/row_discuss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查无此人咋办回复这个可以有:"
                        android:textColor="#040404"
                        style="@style/TextViewItem_gray"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/row_discuss_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        style="@style/TextViewItem_gray"
                        android:text="09月12日 15:45"
                        android:textColor="#10bcc9"


                        android:layout_gravity="right" />
                </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/row_discuss_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewItem_body"
                        android:text="@string/itemdiscuzz"

                        android:layout_gravity="left"

                        android:layout_marginRight="50dp" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_green"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="8dp"
                        android:text="最佳"
                        android:layout_gravity="right" />
                </RelativeLayout>

            </LinearLayout>


    </LinearLayout>

