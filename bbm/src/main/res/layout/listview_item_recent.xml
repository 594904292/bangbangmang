<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
  	android:background="#f5f5f5"
    android:padding="1dp" >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="#FFFFFF"
    android:padding="1dp" >
    <ImageView
        android:id="@+id/usercatagory"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"        
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@mipmap/dynamic_info_left"
        android:background="@drawable/image_radius"
        />

    <TextView
        android:id="@+id/username"
        style="@style/TextViewItem_gray"
        android:layout_toRightOf="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:text="用户137"
        android:textColor="#afb7c3"
        android:textSize="14sp" />
    
      
      
  

    <ImageView
        android:id="@+id/userhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/username"
        android:layout_toRightOf="@+id/tag"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dynamic_info_icon" />

  <TextView
      android:id="@+id/evaluate"
   	  android:layout_marginTop="10dp"      
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/username"
      android:layout_toRightOf="@id/userhead"
      android:text="发表了一条求助信息" 
      android:textColor="#7f7f7f"
      android:textSize="12sp"/>


   <TextView
      android:id="@+id/messnum"
   	  android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/username"
      android:layout_alignParentRight="true"
      android:text=""
      android:textColor="#7f7f7f"
      android:textSize="12sp"
       android:background="@drawable/text_view_border"
      style="@style/left_drawer_count"
      />



  <TextView
      android:id="@+id/lastchattimer"
      style="@style/TextViewItem_gray"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"   
      android:layout_alignBottom="@+id/usercatagory"
      android:layout_alignRight="@+id/evaluate"
      android:text="2015-10-30 10:09:22"
      android:textSize="12sp" />

</RelativeLayout>     

</RelativeLayout>