<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListView最左边的缩略图 -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="2dip" >

        <ImageView
            android:id="@+id/row_user_image"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@mipmap/rihanna" />
    </LinearLayout>

    <TextView
        android:id="@+id/row_discuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="查无此人咋办回复这个可以有:"
        android:textColor="#040404"
        android:textSize="12sp"
        android:typeface="sans" />

    <!-- 时间 -->

    <TextView
        android:id="@+id/row_discuss_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="09月12日 15:45"
        android:textColor="#10bcc9"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_discuss_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/row_discuss"
        android:layout_below="@+id/row_discuss"
        android:text="阿斯顿发撒旦法分谁的发生的发达撒大法师法大撒旦发生的发生的发生阿斯顿发撒旦法分谁的发生的发达撒大法师法大撒旦发生的发生的发生"
        android:textColor="#343434"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_discuss_content"
        android:background="@drawable/button_green"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="最佳" />

</RelativeLayout><!-- From: file:/F:/AndroidStudio/workspace/bbm/src/main/res/layout/group_list_item.xml -->